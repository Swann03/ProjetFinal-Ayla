{% extends 'base.html.twig' %}
{% block title %}Joueurs - Gentlemates{% endblock %}

{% block body %}
    <!-- TEAMS GRID -->
    <section class="teams-section">
        <div class="container">
            <h2 class="section-title">GAME SQUADS</h2>
            
            <div class="teams-grid">
                {% for equipe in equipes %}
                    <a href="{{ path('app_equipe_detail', {id: equipe.id}) }}" class="team-card">
                        <!-- IMAGE DE FOND DU JEU -->
                        <div class="team-background" style="background-image: url('{{ asset('image/jeux/' ~ equipe.imageFond) }}');"></div>
                        
                        <div class="team-overlay"></div>
                        
                        <!-- NOM DU JEU (sauf pour Warzone) -->
                        <div class="team-content">
                            {% if equipe.nom != 'CALL OF DUTY WARZONE' %}
                                <h3>{{ equipe.nom }}</h3>
                            {% endif %}
                        </div>
                    </a>
                {% else %}
                    <p class="no-teams">Aucune équipe disponible</p>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}


{% block stylesheets %}
{{ parent() }}
<style>

/* --- TEAMS SECTION --- */
.teams-section {
    background: #0a0a0a;
    padding: 120px 40px 100px; /* top un peu plus grand pour passer sous la navbar */
    min-height: 50vh;
}

.section-title {
    text-align: center;
    font-size: 3rem;
    color: rgba(197, 19, 158, 0.6);
    text-transform: uppercase;
    letter-spacing: 5px;
    margin-bottom: 60px;
    font-weight: 800;
}

.teams-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    max-width: 1400px;
    margin: 0 auto;
}

/* --- CARTE D'ÉQUIPE AVEC IMAGE DE FOND --- */
.team-card {
    position: relative;
    height: 400px;
    border-radius: 20px;
    text-decoration: none;
    color: white;
    overflow: hidden;
    transition: all 0.4s ease;
    border: 2px solid rgba(197, 19, 158, 0.3);
}

/* Image de fond du jeu */
.team-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    transition: transform 0.4s ease;
}

.team-card:hover .team-background {
    transform: scale(1.1);
}

/* Overlay sombre */
.team-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.7) 100%);
    transition: background 0.4s ease;
}

.team-card:hover .team-overlay {
    background: linear-gradient(180deg, rgba(197, 19, 158, 0.3) 0%, rgba(0,0,0,0.85) 100%);
}

/* Contenu de la carte - juste le titre */
.team-content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30px;
}

.team-content h3 {
    font-size: 1.8rem;         
    text-transform: uppercase;
    letter-spacing: 4px;       
    text-shadow: 0 6px 20px rgba(0, 0, 0, 0.9);
    transition: all 0.3s ease;
    text-align: center;
}

.team-card:hover h3 {
    color: rgba(197, 19, 158, 0.9);
    transform: scale(1.05);     
    text-shadow: 0 8px 30px rgba(197, 19, 158, 0.8);
}

.no-teams {
    grid-column: 1 / -1;
    text-align: center;
    color: #666;
    font-size: 1.2rem;
    padding: 60px;
}

/* --- RESPONSIVE --- */
@media (max-width: 768px) {
    .section-title {
        font-size: 2rem;
    }
    
    .teams-grid {
        grid-template-columns: 1fr;
    }
    
    .team-card {
        height: 350px;
    }
    
    .team-content h3 {
        font-size: 1.5rem;      
        letter-spacing: 3px;    
    }
}

.player-img {
    width: 180px;
    height: 220px;
    object-fit: cover;
    border-radius: 10px;
}

</style>
{% endblock %}


