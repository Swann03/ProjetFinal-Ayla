{% extends 'base.html.twig' %}
{% block title %}{{ equipe.nom }} - Gentlemates{% endblock %}

{% block body %}
    <!-- HERO ÉQUIPE -->
    <section class="team-detail-hero">
        <div class="overlay"></div>
        <div class="hero-content">
            <img src="{{ asset('uploads/logos/' ~ equipe.logo) }}" alt="{{ equipe.nom }}" class="hero-logo">
            <h1>{{ equipe.nom }}</h1>
            <p>{{ equipe.description }}</p>
        </div>
    </section>

    <!-- ROSTER -->
    <section class="roster-section">
        <div class="container">
            <h2>ROSTER</h2>
            
            <div class="players-roster">
                {% for joueur in equipe.joueurs %}
                    <div class="player-card-detailed">
                        <div class="player-number">#{{ loop.index }}</div>
                        <div class="player-avatar-large">
                            <span>{{ joueur.nom|first|upper }}</span>
                        </div>
                        <div class="player-details">
                            <h3>{{ joueur.nom }}</h3>
                            <p class="player-bio">{{ joueur.bio }}</p>
                        </div>
                    </div>
                {% else %}
                    <p class="no-players">Aucun joueur dans cette équipe</p>
                {% endfor %}
            </div>
            
            <div class="back-link">
                <a href="{{ path('app_joueur') }}" class="btn-back">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    Retour aux équipes
                </a>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
/* --- TEAM DETAIL HERO --- */
.team-detail-hero {
    position: relative;
    width: 100%;
    height: 70vh;
    background: linear-gradient(180deg, 
        rgb(80, 16, 110) 0%,
        rgb(78, 15, 105) 8%,
        rgb(76, 15, 100) 12%,
        rgb(74, 14, 96) 16%,
        rgb(72, 14, 92) 20%,
        rgb(70, 13, 88) 24%,
        rgb(68, 13, 84) 28%,
        rgb(66, 12, 80) 32%,
        rgb(62, 12, 76) 36%,
        rgb(58, 11, 72) 40%,
        rgb(54, 11, 68) 44%,
        rgb(50, 10, 64) 48%,
        rgb(46, 10, 60) 52%,
        rgb(42, 10, 56) 56%,
        rgb(38, 9, 52) 60%,
        rgb(34, 9, 48) 64%,
        rgb(30, 9, 44) 68%,
        rgb(26, 8, 38) 72%,
        rgb(22, 8, 32) 76%,
        rgb(18, 7, 26) 80%,
        rgb(15, 7, 22) 84%,
        rgb(13, 6, 18) 88%,
        rgb(11, 5, 14) 92%,
        rgb(10, 5, 12) 96%,
        rgb(10, 10, 10) 100%);
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    text-align: center;
}

.team-detail-hero .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    z-index: 1;
}

.team-detail-hero .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
}

.hero-logo {
    width: 200px;
    height: 200px;
    object-fit: contain;
    filter: drop-shadow(0 0 40px rgba(197, 19, 158, 0.8));
    animation: float 3s ease-in-out infinite;
}

@keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
}

.team-detail-hero h1 {
    font-size: 4rem;
    font-weight: 800;
    letter-spacing: 6px;
    text-transform: uppercase;
}

.team-detail-hero p {
    font-size: 1.2rem;
    max-width: 600px;
    line-height: 1.8;
    color: #ddd;
}

/* --- ROSTER SECTION --- */
.roster-section {
    background: #0a0a0a;
    padding: 100px 40px;
    min-height: 50vh;
}

.roster-section h2 {
    text-align: center;
    font-size: 3rem;
    color: rgba(197, 19, 158, 0.6);
    text-transform: uppercase;
    letter-spacing: 5px;
    margin-bottom: 60px;
    font-weight: 800;
}

.players-roster {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto 60px;
}

.player-card-detailed {
    background: linear-gradient(145deg, #1a1a1a, #0f0f0f);
    border-radius: 20px;
    padding: 30px;
    border: 2px solid rgba(197, 19, 158, 0.2);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.player-card-detailed:hover {
    transform: translateY(-5px);
    border-color: rgba(197, 19, 158, 0.8);
    box-shadow: 0 15px 40px rgba(197, 19, 158, 0.3);
}

.player-number {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 3rem;
    font-weight: 900;
    color: rgba(197, 19, 158, 0.2);
}

.player-avatar-large {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(197, 19, 158, 0.6), rgba(154, 61, 240, 0.6));
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    box-shadow: 0 0 30px rgba(197, 19, 158, 0.5);
}

.player-avatar-large span {
    font-size: 3rem;
    font-weight: 900;
    color: white;
}

.player-details {
    text-align: center;
}

.player-details h3 {
    font-size: 1.8rem;
    color: white;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.player-bio {
    color: #aaa;
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
}

.back-link {
    text-align: center;
    margin-top: 40px;
}

.btn-back {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 15px 30px;
    background: rgba(197, 19, 158, 0.2);
    color: white;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: all 0.3s ease;
    border: 2px solid rgba(197, 19, 158, 0.4);
}

.btn-back:hover {
    background: rgba(197, 19, 158, 0.6);
    border-color: rgba(197, 19, 158, 0.8);
    transform: translateX(-5px);
}

.no-players {
    grid-column: 1 / -1;
    text-align: center;
    color: #666;
    font-size: 1.2rem;
    padding: 60px;
}

/* --- RESPONSIVE --- */
@media (max-width: 768px) {
    .team-detail-hero h1 {
        font-size: 2.5rem;
    }
    
    .hero-logo {
        width: 150px;
        height: 150px;
    }
    
    .roster-section h2 {
        font-size: 2rem;
    }
    
    .players-roster {
        grid-template-columns: 1fr;
    }
}
</style>
{% endblock %}
