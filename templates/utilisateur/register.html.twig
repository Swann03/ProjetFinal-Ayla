{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block stylesheets %}
 {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}
{% block body %}
<div class="auth-page">
    <div class="auth-card">
        <h1 class="auth-title">Créer un compte</h1>
        <p class="auth-subtitle">Rejoins la plateforme en quelques secondes</p>

        {{ form_start(registrationForm, { attr: { class: 'auth-form' } }) }}

            {{ form_errors(registrationForm) }}

            <div class="auth-field">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, { attr: { class: 'auth-input' } }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="auth-field">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                {{ form_widget(registrationForm.plainPassword, { attr: { class: 'auth-input' } }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="auth-field">
                {{ form_label(registrationForm.nom, 'Nom') }}
                {{ form_widget(registrationForm.nom, { attr: { class: 'auth-input' } }) }}
                {{ form_errors(registrationForm.nom) }}
            </div>

            <div class="auth-field">
                {{ form_label(registrationForm.dateNaissance, 'Date de naissance') }}
                {{ form_widget(registrationForm.dateNaissance, { attr: { class: 'auth-input' } }) }}
                {{ form_errors(registrationForm.dateNaissance) }}
            </div>

            <button type="submit" class="auth-button">
                S'inscrire
            </button>

        {{ form_end(registrationForm) }}

        <p class="auth-footer-text">
            Tu as déjà un compte ?
            <a href="{{ path('app_login') }}" class="auth-link">Se connecter</a>
        </p>
    </div>
</div>
{% endblock %}
