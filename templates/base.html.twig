<!DOCTYPE html>
<head>
    <meta charset="UTF-8">

    <title>{% block title %}Gentlemates{% endblock %}</title>

    <!-- Bootstrap en premier -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Ensuite TON CSS -->
    {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    {% endblock %}

    <!-- JS -->
    {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>


<body>
        <!-- NAVBAR -->
    <nav class="navbar-custom">
        <a href="{{ path('app_accueil') }}" class="navbar-logo">Gentlemates</a>

        <ul class="navbar-menu" id="navMenu">
            <li><a href="{{ path('app_joueur') }}">Équipe</a></li>
            <li><a href="{{ path('app_rencontre') }}">Matchs</a></li>

            {% if app.request.attributes.get('_route') == 'app_accueil' %}
                <li><a href="#news">Actualités</a></li>
            {% else %}
                <li><a href="{{ path('app_accueil') }}#news">Actualités</a></li>
            {% endif %}

            <li><a href="{{ path('app_vote') }}">Votes</a></li>
        </ul>

        <div class="navbar-auth">
            {% if app.user %}
                <span class="navbar-username">{{ app.user.nom }}</span>
                <a href="{{ path('app_logout') }}" class="navbar-logout">Déconnexion</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="navbar-login">Se connecter</a>
                <a href="{{ path('app_register') }}" class="navbar-register">S'inscrire</a>
            {% endif %}
        </div>

        <div class="navbar-burger" onclick="toggleMenu()">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </nav>


       
        {% block body %}{% endblock %}

        {{ include('layout/_footer.html.twig') }}


        <script>
            function toggleMenu() {
                document.getElementById('navMenu').classList.toggle('active');
            }
        </script>

        
    </body>
</html>


        



